<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lite_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/lite_device_id_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_id_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/lite_enrol_token_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/enrol_token_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/enrol_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lite_enrol_button" />

            <Button
                android:id="@+id/refresh_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="@string/lite_refresh_button" />
        </LinearLayout>

        <Button
            android:id="@+id/enrol_all_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/lite_enrol_all_button" />

        <Button
            android:id="@+id/sync_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/lite_sync_button" />

        <Button
            android:id="@+id/mqtt_refresh_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/mqtt_refresh_button" />

        <Button
            android:id="@+id/tailscale_config_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/tailscale_config_button" />

        <Button
            android:id="@+id/refresh_extras_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/refresh_extras_button" />

        <TextView
            android:id="@+id/mqtt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/mqtt_section_title"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mqtt_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mqtt_host"
            android:inputType="textUri" />

        <EditText
            android:id="@+id/mqtt_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mqtt_port"
            android:inputType="number" />

        <EditText
            android:id="@+id/mqtt_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mqtt_path"
            android:inputType="textUri" />

        <EditText
            android:id="@+id/mqtt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mqtt_user"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/mqtt_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mqtt_pass"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/mqtt_qid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mqtt_qid"
            android:inputType="text" />

        <EditText
            android:id="@+id/mqtt_client_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mqtt_client_id"
            android:inputType="text" />

        <CheckBox
            android:id="@+id/mqtt_tls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/mqtt_tls" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/mqtt_start_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mqtt_start" />

            <Button
                android:id="@+id/mqtt_stop_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/mqtt_stop" />
        </LinearLayout>

        <TextView
            android:id="@+id/mqtt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:text="@string/mqtt_status_placeholder" />

    </LinearLayout>

</ScrollView>
